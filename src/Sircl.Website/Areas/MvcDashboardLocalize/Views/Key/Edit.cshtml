@model EditModel
@{
    ViewBag.Title = Model.Item.Name ?? "new";
}
<h1>Key <small class="text-muted">@(Model.Item.Name ?? "new")</small></h1>

<form asp-action="Submit" asp-route-id="@Model.Item.Id" method="post" onkeyenter-click="" autocomplete="off" onchange-set="HasChanges" onunloadchanged-confirm="Changes will be lost. Proceed anyway ?">

    <div class="overlay" hidden></div>

    <input type="hidden" asp-for="Item.Id" />
    <input type="hidden" asp-for="HasChanges" />

    <div asp-validation-summary="All" class="alert alert-danger alert-dismissible fade show mb-3">
        <strong>Following errors have occured:</strong>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>

    <div class="mb-3">
        <label for="@Html.IdFor(m => m.Item.DomainId)" class="form-label">Domain: *</label>
        <select asp-for="Item.DomainId" asp-items="Model.Domains.Select(t => new SelectListItem() { Value = t.Id.ToString(), Text = t.Name, Selected = (t.Id == Model.Item.DomainId) })" class="form-control onchange-submit">
            <option value="">-</option>
        </select>
        <span asp-validation-for="Item.DomainId" class="text-danger"></span>
        @if (Model.Item.DomainId != 0)
        {
            <div>
                @foreach (var cult in Model.Domains.Single(d => d.Id == Model.Item.DomainId).Cultures)
                {
                    <a href="null" onclick-scrollintoview="#cult-@(cult)" class="onunloadchanged-allow" style="margin-right: 1ch;">@(cult)</a>
                }
            </div>
        }
    </div>

    <div class="mb-3">
        <label for="@Html.IdFor(m => m.Item.Name)" class="form-label">Name: *</label>
        <input asp-for="Item.Name" type="text" class="form-control" />
        <span asp-validation-for="Item.Name" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <div class="form-check form-check-inline">
            <input asp-for="Item.MimeType" class="form-check-input onchange-submit" type="radio" id="inlineCheckbox1" value="text/plain">
            <label class="form-check-label" for="inlineCheckbox1">Plain text</label>
        </div>
        <div class="form-check form-check-inline">
            <input asp-for="Item.MimeType" class="form-check-input onchange-submit" type="radio" id="inlineCheckbox2" value="text/html">
            <label class="form-check-label" for="inlineCheckbox2">HTML</label>
        </div>
        <span asp-validation-for="Item.MimeType" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label for="@Html.IdFor(m => m.Item.ForPath)" class="form-label">For path:</label>
        <input asp-for="Item.ForPath" type="text" class="form-control" />
        <span asp-validation-for="Item.ForPath" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label for="@Html.IdFor(m => m.ParameterNames)" class="form-label">Parameter names (comma-separated list):</label>
        <input asp-for="ParameterNames" type="text" class="form-control" />
        <span asp-validation-for="ParameterNames" class="text-danger"></span>
    </div>

    @for (int i = 0; i < Model.Values.Count; i++)
    {
        <div id="cult-@(Model.Values[i].Culture)" class="card mb-3">
            <div class="card-body">
                <input type="hidden" asp-for="Values[i].Id" />
                <input type="hidden" asp-for="Values[i].Culture" />
                <h5 class="card-title">@Model.Values[i].Culture</h5>
                <textarea asp-for="Values[i].Value" class="form-control" rows="6"></textarea>
                @if (Model.Item.MimeType == "text/html")
                { 
                    <span class="float-end">
                        <span id="@Html.IdFor(m => m.Values[i].Value)_tb" class="d-none d-sm-none d-md-inline">
                        <button type="button" class="btn btn-light btn-sm" onclick="insertTag('@(Html.IdFor(m => m.Values[i].Value))', '<h1>', '</h1>');">&lt;H1&gt;</button>
                        <button type="button" class="btn btn-light btn-sm" onclick="insertTag('@(Html.IdFor(m => m.Values[i].Value))', '<h2>', '</h2>');">&lt;H2&gt;</button>
                        <button type="button" class="btn btn-light btn-sm" onclick="insertTag('@(Html.IdFor(m => m.Values[i].Value))', '<h3>', '</h3>');">&lt;H3&gt;</button>
                        <button type="button" class="btn btn-light btn-sm" onclick="insertTag('@(Html.IdFor(m => m.Values[i].Value))', '<p>', '</p>');">&lt;P&gt;</button>
                        <button type="button" class="btn btn-light btn-sm" onclick="insertTag('@(Html.IdFor(m => m.Values[i].Value))', '<div>', '</div>');">&lt;DIV&gt;</button>
                        <button type="button" class="btn btn-light btn-sm" onclick="insertTag('@(Html.IdFor(m => m.Values[i].Value))', '<b>', '</b>');">&lt;b&gt;</button>
                        <button type="button" class="btn btn-light btn-sm" onclick="insertTag('@(Html.IdFor(m => m.Values[i].Value))', '<i>', '</i>');">&lt;i&gt;</button>
                        <button type="button" class="btn btn-light btn-sm" onclick="insertTag('@(Html.IdFor(m => m.Values[i].Value))', '<a href=\'\' target=\'_blank\'>', '</a>');">&lt;a&gt;</button>
                        |
                        </span>
                        <button type="submit"  class="btn btn-light btn-sm"asp-action="Preview" asp-route-id="@Model.Item.Id" asp-route-previewculture="@Model.Values[i].Culture" target="#preview-modal-body">Preview</button>
                    </span>
                }
                <label>
                    <input type="checkbox" asp-for="Values[i].Reviewed" class="reviewed-chk" ifchecked-readonly="#@Html.IdFor(m => m.Values[i].Value)" ifchecked-hide="#@Html.IdFor(m => m.Values[i].Value)_tb" /> Is reviewed
                </label>
            </div>
        </div>
    }

    @if (Model.Item.DomainId != 0)
    {
        <div class="mb-3">
            <button type="button" class="btn btn-link" onclick-check=".reviewed-chk">Mark all as reviewed</button>
        </div>
    }

    <div class="mb-3">
        <label for="@Html.IdFor(m => m.Item.Notes)" class="form-label">Notes:</label>
        <textarea asp-for="Item.Notes" class="form-control" rows="4"></textarea>
        <span asp-validation-for="Item.Notes" class="text-danger"></span>
    </div>

    @if (Model.HasTranslationService && Model.Values.Any())
    {
        <div class="alert alert-primary">
            <p>
                Automatically translate based on
                <select asp-for="SourceCulture" asp-items="@(new SelectList(Model.Values.Select(v => v.Culture)))" class="form-control" style="width: 10ch; display: inline"></select>
                <button type="submit" class="btn btn-secondary" asp-action="AutoTranslate" asp-route-id="@Model.Item.Id"><i class="spinner fas fa-check"></i> Translate</button>
            </p>
            <p>
                Note: only cultures with no value and not marked reviewed will get a value, provided the translation service supports the culture.
            </p>
        </div>
    }

    @if (Model.Item.Id != 0)
    {
        <span class="float-end">
            <button type="submit" class="btn btn-danger" asp-action="Delete" asp-route-id="@Model.Item.Id" onclick-confirm="Are you sure ?"><i class="spinner fas fa-trash-alt"></i> Delete</button>
        </span>
    }
    <button type="submit" class="btn btn-primary" asp-action="Save" asp-route-id="@Model.Item.Id"><i class="spinner fas fa-check"></i> Save</button>
    <button type="submit" class="btn btn-primary" asp-action="Save" asp-route-id="@Model.Item.Id" name="apply" value="true"><i class="spinner fas fa-check"></i> Apply</button>
    <a href="history:back" class="btn btn-secondary"><i class="fas fa-angle-left"></i> Back</a>
    <div class="form-check mt-2">
        <input class="form-check-input" type="checkbox" asp-for="SaveAsCopy">
        <label class="form-check-label" asp-for="SaveAsCopy">
            As copy
        </label>
    </div>

</form>

<div id="preview-modal" class="modal fade beforeload-showmodal onclose-restore" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div id="preview-modal-content" class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Preview</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div id="preview-modal-body" class="modal-body">
                <i>Creating preview...</i>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>
