        //    req.$finalTarget = sircl.ext.$mainTarget();
        //    req.responseText = "<h1>Error " + req.status + " - " + (req.statusText || "Unexpected error") + "</h1><p>An unexpected error has occured.</p>";
        //    req.succeeded = true;
        //    this.next(req);
        //});
