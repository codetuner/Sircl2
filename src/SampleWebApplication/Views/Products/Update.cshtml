@model SampleWebApplication.Models.Products.UpdateModel

<h2>@(Model.Item.Label ?? "New Product")</h2>

<div asp-validation-summary="All" class="alert alert-warning text-danger">Please fix following errors:</div>

<form asp-action="Update" method="post">

    <input asp-for="Item.Id" type="hidden" />

    <div class="form-group">
        <label asp-for="Item.Label"></label>
        <input asp-for="Item.Label" type="text" class="form-control" autocomplete="off" />
    </div>

    <div class="form-group">
        <label asp-for="Item.Barcode"></label>
        <input asp-for="Item.Barcode" type="text" class="form-control" autocomplete="off" />
    </div>

    <div class="form-group">
        <label asp-for="Item.UnitPrice"></label>
        <input asp-for="Item.UnitPrice" type="text" class="form-control" autocomplete="off" />
    </div>

    <div class="form-group">
        <label asp-for="Item.Description"></label>
        <textarea asp-for="Item.Description" class="form-control" rows="6">
        </textarea>
    </div>

    @if (Model.Item.Id != 0)
    {
        <button type="submit" asp-action="Delete" class="btn btn-danger float-right">Delete</button>
    }
    <button type="button" class="btn btn-info" data-bs-toggle="popover" data-trigger="hover focus" data-container="body" data-placement="bottom" title="Popover title" data-content="And here's some amazing content. It's very engaging. Right?">Info</button>
    <button type="submit" class="btn btn-primary onhover-popover onfocus-popover" data-bs-toggle="popover" data-trigger="hover focus" data-container="body" data-placement="bottom" title="Save changes" data-content="Press this button to save changes.">Save</button>
    <a href="history:back" class="btn btn-link">Back</a>

</form>

